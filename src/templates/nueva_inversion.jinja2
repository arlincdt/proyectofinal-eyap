{%extends "base.jinja2" %} {% block content %}

<div class="page-header">
    <h1>Nueva Inversion</h1>    
</div>
<div class="form-size">
    <form method="POST">
        <div class="form-group">
            <label for="fecha">Tipo de Inversion</label>
            <select name="tId" id="tId"class="form-control" >
                {% if tasas %}
                {% for i in range(tasas|length) %}
                <option value="{tasas[i].tId}">{tasas[i].tipo}</option>
                {%endfor%}
                {%endif%}
            </select>
        </div>
        <div class="form-group">
                <label for="fecha">Monto Inicial</label>
                <input type="text" class="form-control" id="montoInicial" name="montoInicial" placeholder="100000">
            </div>
        <button type="submit" class="btn btn-primary">Crear</button>
        
    </form>
</div>
{% endblock %}
